{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2022"],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "*": ["typings/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true
  },
  "include": [
    "lib/**/*",
    "tests/lib/**/*",
    "tests-integrations/lib/**/*",
    "tools/**/*",
    "typings/**/*",
    "docs/.vitepress/**/*"
  ],
  "exclude": ["dist/**/*"]
}
